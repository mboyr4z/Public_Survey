@model author_createDto


    <form method="post" asp-action="CompleteAuthorMembership"
        enctype="multipart/form-data">
        <div class="row my-10">
            <div class="col-md-3">
                <div class="text-muted">Hello Author</div><br>
                <div class="text-success">Please Complete your membership!</div>

            </div>
            <div class="col-md-6">

                <div class="">
                    <div class="text-danger" asp-validation-summary="All">

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" type="text" asp-for="Name">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="Surname"></label>
                            <input class="form-control" type="text" asp-for="Surname">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="Age"></label>
                            <input class="form-control" type="text" asp-for="Age">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="City"></label>
                            <input class="form-control" type="text" asp-for="City">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="ImageUrl"></label>
                            <input type="file" name="imageFileAuthor" class="form-control" asp-for="ImageUrl"
                                placeholder="Enter this.">
                        </div>


                        <div class="form-group d-flex align-items-center justify-content-between">
                            <button class="btn btn-success" type="submit">Complete</button>
                        </div>
                        
                        
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CompanyId">Company</label>
                            <select class="form-control" asp-items="@ViewBag.Companies" asp-for="CompanyId">
                            </select>
                        </div>
                    </div>


                </div>

            </div>
            <div class="col-md-3"></div>
        </div>




    </form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}