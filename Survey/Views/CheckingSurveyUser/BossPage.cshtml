@model boss_createDto



@if (ViewBag.completedMembership)
{

}
else
{
    <form method="post" asp-controller="CheckingSurveyUser" asp-action="CompleteBossMembership"
        enctype="multipart/form-data">
        <div class="row my-10">
            <div class="col-md-3">
                <div class="text-muted">Hello Boss</div><br>
                <div class="text-success">Please Complete your membership!</div>

            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-5">
                        <h2 class="blockquote-footer">Person Information</h2>
                        <div class="">
                            <div class="text-danger" asp-validation-summary="All">

                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" type="text" asp-for="Name">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="Surname"></label>
                            <input class="form-control" type="text" asp-for="Surname">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="Age"></label>
                            <input class="form-control" type="text" asp-for="Age">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="City"></label>
                            <input class="form-control" type="text" asp-for="City">
                        </div>

                     

                        <div class="form-group my-3">
                            <label asp-for="ImageUrl"></label>
                            <input type="file" name="imageFileBoss" class="form-control" asp-for="ImageUrl"
                                placeholder="Enter this.">
                        </div>

                    </div>


                    <div class="col-md-7">

                        <h2 class="blockquote-footer">Company Information</h2>

                        <div class="form-group my-3">
                            <label asp-for="companyCreateDto.Name"></label>
                            <input class="form-control" type="text" asp-for="companyCreateDto.Name">
                        </div>

                        <div class="form-group my-3">
                            <label asp-for="companyCreateDto.Address"></label>
                            <input class="form-control" type="text" asp-for="companyCreateDto.Address">
                        </div>


                        <div class="form-group my-3">
                            <label asp-for="companyCreateDto.ImageUrl"></label>
                            <input type="file" name="imageFileCompany" class="form-control" asp-for="companyCreateDto.ImageUrl"
                                placeholder="Enter this.">
                        </div>
                    </div>





                </div>





                <div class="form-group d-flex align-items-center justify-content-between">
                    <button class="btn btn-success" type="submit">Complete</button>
                </div>


            </div>
            <div class="col-md-3"></div>
        </div>




    </form>


}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}