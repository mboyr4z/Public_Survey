@model account_RegisterDto

<form method="post" asp-action="Index">
    <div class="row my-10">
        <div class="col-md-3">


        </div>
        <div class="col-md-6">

            <div class="">
                <div class="text-danger" asp-validation-summary="All">

                </div>
            </div>


            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" type="text" asp-for="UserName">
            </div>

            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input class="form-control" type="text" asp-for="Email">
            </div>

            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input class="form-control" type="text" asp-for="Password">
            </div>

            <div class="form-group my-3">
                <label>Role </label>
                <select class="form-control" asp-items="@ViewBag.allRoles" asp-for="RoleId">
                </select>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between">
                <button class="btn btn-success" type="submit">Register</button>
                <p class="m-0">Are You Already a Member <a asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                </p>

            </div>


        </div>
        <div class="col-md-3"></div>
    </div>




</form>
