@model account_RegisterDto

<form method="post" asp-action="Index">
    <div class="row my-10">
        <div class="col-md-3">


        </div>
        <div class="col-md-6">

            <div class="">
                <div class="text-danger" asp-validation-summary="All">

                </div>
            </div>


            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" type="text" asp-for="UserName">
            </div>

            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input class="form-control" type="text" asp-for="Email">
            </div>

            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input class="form-control" type="text" asp-for="Password">
            </div>

            <div class="form-group my-3">
                <label asp-for="RoleId"></label>
                <select class="form-control" asp-items="@ViewBag.allRoles" asp-for="RoleId">
                </select>
            </div>

            <div class="btn-group ">
                <a class="btn btn-secondary rounded-10" asp-controller="Login" asp-action="Index">Login Page</a>
                <button class="btn btn-outline-secondary" type="submit">Register</button>
            </div>


        </div>
        <div class="col-md-3"></div>
    </div>




</form>
