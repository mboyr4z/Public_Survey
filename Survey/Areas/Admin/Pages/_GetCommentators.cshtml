@using MyApp.Pages

@model List<ListedCommentator>

<div class="row text-center">
   
    <div class="col-md-12">
        <h2>Admins</h2>
        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Age</th>
                    <th>City</th>
                    <th>Confirmed</th>
                    <th>Like Rate</th>
                    <th>Image</th>
                    <th>Operations</th>
                </tr>

            </thead>
            @foreach (ListedCommentator commentator in Model)
            {
                <tr class="text-center">
                    <td>@commentator.user.UserName</td>
                    <td>@commentator.user.Email</td>
                    <td>@commentator.commentator?.Name</td>
                    <td>@commentator.commentator?.Surname</td>
                    <td>@commentator.commentator?.Age</td>
                    <td>@commentator.commentator?.City</td>
                    <td>
                        @if((bool)commentator.commentator.Confirmed){
                            <i class="fa-solid fa-check"></i>
                        }else{
                            <i class="fa-solid fa-exclamation"></i>
                        }
                    </td>
                    <td>@commentator.commentator?.LikeRate</td>
                    <td>
                        @if(@commentator.commentator is not null){
                            <img class="img-thumbnail" style="width: 60px; height: 60px;" src="~/@commentator.commentator?.ImageUrl" alt="">
                        }
                        
                      
                    </td>
                    
                    <td>
                        <div class="btn-group">
                                <input type="hidden" name="Username" value="@commentator.user.Id">
                                <button type="submit" class="btn btn-danger rounded-0">
                                    <i class="fa fa-trash"></i>
                                </button>
                        </div>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
