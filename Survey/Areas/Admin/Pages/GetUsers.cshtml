@page "/Users"
@using Benimkiler.Roles
@using MyApp.Pages

@model GetUsersModel
@{
    ViewData["Title"] = "Home Page";
}


<form method="post" asp-page="GetUsers">
    <div class="row my-10">
        <div class="col-md-3">


        </div>
        <div class="col-md-6">

            <div class="">
                <div class="text-danger" asp-validation-summary="All">

                </div>
            </div>

            <div class="form-group my-3">
                <label asp-for="Name">Role</label>
                <select class="form-control" asp-items="@Model.roleSelectList" asp-for="Name">
                </select>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between">
                <button class="btn btn-success" type="submit">Get Users</button>
            </div>


        </div>
        <div class="col-md-3"></div>
    </div>
</form>

@if (Model.role == Roles.Admin)
{
   <partial name="_GetAdmins" model="@Model.admins"></partial>
}
else if (Model.role == Roles.Boss)
{
       <partial name="_GetBosses" model="@Model.bosses"></partial>

}
else if (Model.role == Roles.Commentator)
{
      <partial name="_GetCommentators" model="@Model.commentators"></partial>
}
else if (Model.role == Roles.Author)
{
      <partial name="_GetAuthors" model="@Model.authors"></partial>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}